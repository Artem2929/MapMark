{
  "name": "mapmark",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:db\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend/server && npm install && npm run dev",
    "dev:db": "cd backend && docker-compose up mongodb",
    "dev:full": "cd backend && docker-compose up",
    "stop": "./stop-all.sh",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "lint:css": "stylelint 'src/**/*.{css,scss}'",
    "lint:css:fix": "stylelint 'src/**/*.{css,scss}' --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,css,scss,json}'",
    "format:check": "prettier --check 'src/**/*.{js,jsx,css,scss,json}'",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "dompurify": "^3.0.5",
    "glob": "^13.0.0",
    "i18next": "^25.5.2",
    "leaflet": "^1.9.4",
    "lodash": "^4.17.21",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.48.2",
    "react-i18next": "^15.7.3",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.9.1",
    "react-stars": "^2.2.5",
    "socket.io-client": "^4.8.1",
    "yup": "^1.3.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.2"
  }
}
