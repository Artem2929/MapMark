/* Instagram-style photo modal sidebar */
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 12px;
}

.photo-modal-header h4 {
  font-size: 16px;
  font-weight: 600;
  color: #262626;
  margin: 0;
}

.edit-description-btn {
  background: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  font-size: 12px;
  cursor: pointer;
  padding: 6px 12px;
  border-radius: 12px;
  font-weight: 500;
  transition: all 0.2s ease;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
}

.edit-description-btn:hover {
  background: rgba(59, 130, 246, 0.15);
  border-color: rgba(59, 130, 246, 0.3);
}



.photo-modal-description p {
  margin: 0;
  font-size: 14px;
  line-height: 1.4;
  color: #262626;
}

.photo-modal-comments {
  flex: 1;
  overflow-y: auto;
  padding: 0;
  margin-top: 24px;
}

.comment-item {
  display: flex;
  padding: 12px 16px;
  gap: 12px;
  border-bottom: 1px solid #efefef;
  margin-bottom: 12px;
  align-items: center;
}

.comment-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 12px;
  flex-shrink: 0;
  overflow: hidden;
}

.comment-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.comment-main {
  margin-bottom: 4px;
  padding-right: 8px;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.comment-author {
  font-weight: 600;
  font-size: 14px;
  color: #262626;
  margin-right: 8px;
}

.comment-text {
  font-size: 14px;
  color: #262626;
  line-height: 1.4;
  word-break: break-word;
  overflow-wrap: break-word;
}

.comment-time {
  font-size: 12px;
  color: #8e8e8e;
  margin-bottom: 8px;
}

.comment-actions {
  display: flex;
  gap: 16px;
}

.comment-like-btn {
  background: none;
  border: none;
  color: #8e8e8e;
  font-size: 12px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 0;
  transition: color 0.2s ease;
}

.comment-like-btn:hover {
  color: #262626;
}

.comment-like-btn.liked {
  color: #ed4956;
}

.comment-like-btn.disliked {
  color: #0095f6;
}

.comment-like-btn svg {
  width: 12px;
  height: 12px;
}

.comment-input-section {
  padding: 16px;
  border-top: 1px solid #efefef;
}

.comment-input-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8px;
}





.comment-counter {
  font-size: 12px;
  color: #8e8e8e;
  font-weight: 400;
}

.comment-counter.warning {
  color: #ed4956;
  font-weight: 600;
}

.description-textarea {
  width: 100%;
  border: none;
  outline: none;
  font-size: 14px;
  resize: none;
  height: 152px;
  min-height: 152px;
  max-height: 152px;
  font-family: inherit;
  padding: 12px;
  border-radius: 8px;
  box-sizing: border-box;
}

.description-textarea:focus {
  border-color: #0095f6;
}

.description-counter {
  text-align: right;
  margin-top: 4px;
  font-size: 12px;
  color: #8e8e8e;
}

.description-counter .warning {
  color: #ed4956;
  font-weight: 600;
}

.no-comments {
  padding: 32px 16px;
  text-align: center;
  color: #8e8e8e;
  font-size: 14px;
}

